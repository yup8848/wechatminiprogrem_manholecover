/* userlogininfo.wxss */
.title {
  font-size: 24px;
  color: #398be5;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  font-weight: bold;
}

.userlogininfo-container {
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 100vh;
  margin-top: 10rpx;
}

.input-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 18px;
  color: #080808;
  margin-right: 10rpx; /* Add margin between label and input */
  white-space: nowrap;
  width: 60px;
  margin-left: 20rpx;
  font-weight: bold;
}

input {
  width: 80%;
  margin: 10rpx;
  padding: 10rpx;
  font-size: 14px;
  border: 1px solid #050505; /* Add border */
  border-radius: 5rpx;

}

button {
  width: 80%;
  height: 80rpx;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 16px;
  margin-top: 25rpx;
}
