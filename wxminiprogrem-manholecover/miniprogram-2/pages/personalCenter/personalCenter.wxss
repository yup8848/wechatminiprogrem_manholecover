/* pages/personalCenter/personalCenter.wxss */
.user-info {
  display: flex;
  flex-direction:row;
  text-align: left;
  margin-left: 60px;
  
  margin-top: 10px;
  margin-bottom: 12px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
}

.name-phone {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 22px;
  color: #333;
  margin-top: 10px;
  margin-bottom: 8px;
}

.phone {
  color: #666;
}

.menu {
  margin-top: 40px;
  display: flex;
  justify-content: space-around;
  flex-direction: column; /* 设置为垂直方向布局，即列布局 */
  justify-content: center;
  align-items: center; 
  width: calc(100% - 100rpx); /* 计算宽度，减去左右各50px的空白 */
  margin: 0 auto; /* 居中显示 */



}

.menu-item {
  display: flex; 
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  border: 5rpx solid #ddd;
  margin-bottom: 50rpx;
  text-align: center;
  
  

}

.menu-item-icon{
  width: 20px;
  height: 20px; 
  margin-right: 20px;
}