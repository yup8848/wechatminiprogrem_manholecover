<!-- userlogininfo.wxml -->
<view class="title" style="color: #2E85E4; font-size: 24px;"> l 用户信息</view>
<view class="userlogininfo-container">
  <view class="input-container">
    <view class="input-label">姓名</view>
    <input placeholder="请输入真实姓名" bindinput="inputName" />
  </view>
  <view class="input-container">
    <view class="input-label">手机号</view>
    <input placeholder="请输入真实手机号" bindinput="inputPhoneNumber" maxlength="11"/>
  </view>
  <button bindtap="submitUserInfo" class="button">提交信息</button>
</view>
