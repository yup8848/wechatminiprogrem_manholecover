/* pages/maps/maps.wxss */
page {
  height: 90%;
}



.map_container {
  height: 100%;
  width: 100%;
  position: relative;
}




.user-icon {
    display: flex;
    align-items: center;
    width: 40px; 
    height: 40px; 
    margin-left: 3px;
}

.container {
  display: flex;
  flex-direction: column;
}


input {
  flex: 1;
  padding: 5px;
  margin-right: 1px;
}

.picker-container {
  display: flex;
  align-items: center;
}

.picker{
  border: 1px solid #ccc;
  background-color: #f0f0f0;
  border-radius: 5px;
  margin-right: 3px;
}

.list-msg2{
  margin-left: 3px;
  margin-right: 3px;
  border: 1px solid #ccc;
  background-color: #f0f0f0;
  border-radius: 5px;
}



.user-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 3px;
}

.research_area{
  display: flex;
  justify-content: space-between; 
  align-items: center; 
  border: 1px solid #ccc;
  border-radius: 7px;
  background-color: #fdfdfd; 
}

.search-input {
  flex: 1;
  padding: 7px;
  background-color: #fdfdfd; 
}

.search-button {
  padding: 7px;
  color: #fff;
  border-radius: 7px;
  cursor: pointer;
  margin-left: 4px;
  margin-right: 3px;
  width: 60px;
 text-align: center;
 font-size: 17px; 
}

.controls{
  height: 40px;
  width: 40px;
  position: absolute;
  bottom: 32px; /* 距离底部的距离 */
  right: 28px; /* 距离右侧的距离 */
  background-color: #fff;
  border-radius: 5px;
  

}






